{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-00b11177",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "gokb-server {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "sudo apt-get dist-upgrade",
      "sudo apt-get install -y puppet wget",
      "wget https://github.com/k-int/gokb-phase1/raw/dev/deployment/puppet/gokb_baseline.pp"
      "puppet apply -v ./baseline.pp"
    ]
  }]
}
