{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-00b11177",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "gokb-server {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo apt-get update",
      "echo Updated",
      "export DEBIAN_FRONTEND=noninteractive",
      "echo switched off interactive upgrades",
      "rm /boot/grub/menu.lst",
      "echo Removed old grub menu",
      "update-grub-legacy-ec2 -y",
      "echo updated grub - do dist-upgrade",
      "sudo apt-get dist-upgrade -qq --force-yes",
      "echo upgrade completed",
      "sudo apt-get -y install puppet wget",
      "echo Puppet installed",
      "wget https://github.com/k-int/gokb-phase1/raw/dev/deployment/puppet/gokb_baseline.pp",
      "echo Got puppet file",
      "puppet apply -v ./gokb_baseline.pp",
      "echo Puppet file applied"
    ]
  }]
}
